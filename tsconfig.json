{
  "compilerOptions": {
    "lib": ["dom", "es2019", "scripthost"],
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2019",
    "declaration": true,
    "module": "commonjs",
    "stripInternal": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
